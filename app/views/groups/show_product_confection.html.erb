<div class="container">
  <% @groups.each do |group|%>
    <div class="col-sm-6 col-md-12 thumbnail">
      <table class="table table-bordered table-responsive">
        <thead>
          <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Foto</th>
            <th>Entrada</th>
            <th>Saída</th>
            <th>Saldo</th>
          </tr>
        </thead>
        <tbody>
          <% 
            sum_purchase = 0
            sum_sale = 0
          %>
          <% for i in 0..5 %>
            <% date = Time.now - i.months %>
            <h3><%#= date.strftime("%B") %></h3>
            <% group.group_products.each do |group_product| %>
                <%
                  sum_purchase += group_product.product.count_purchase_product
                  sum_sale += group_product.product.count_sale_product
                %>
                <tr>
                  <td><%= group_product.product.custom_id %></td>
                  <td><%= group_product.product.name.titleize + ' - ' + t(date.strftime("%B")) %></td>
                  <td><%= image_tag(group_product.product.image.attached? ? group_product.product.image : group_product.product.image_url || "https://purple-stock.s3-sa-east-1.amazonaws.com/images.png", size: "100") %></td>
                  <td><%= group_product.product.count_month_purchase_product(date.year, date.month) %></td>
                  <td><%= group_product.product.count_month_sale_product(date.year, date.month) %></td>
                  <td><%= group_product.product.count_month_purchase_product(date.year, date.month).to_i - group_product.product.count_month_sale_product(date.year, date.month).to_i %></td>
                </tr>
            <% end %>
          <% end %>
        </tbody>
        <h3>Nome do Grupo: <%= group.description.titleize %></h3>
        <table class="table table-bordered">
          <tr>
            <td>Entrada: <%#= sum_purchase %></td>
            <td>Saída: <%#= sum_sale %></td>
            <td>Saldo: <%#= sum_purchase - sum_sale %></td>
          </tr>
        </table>
      </table>
    </div>
  <% end %>
</div>