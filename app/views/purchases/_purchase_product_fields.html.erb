<div class="nested-fields">
  <div class="field">
    <%= f.label t(:product_id), :class => 'control-label col-lg-1'%>
    <div class="col-lg-1">
      <%= f.select :product_id, Product.all.collect {|p| ["#{p.custom_id} - #{p.name} - #{p.price}", p.id ] }, { :include_blank => 'Selecione um Produto'}, :class => "form-control form-control-sm" %>
    </div>
  </div>
  <div class="field">
    <%= f.label t(:quantity), :class => 'control-label col-lg-1'%>
    <div class="col-lg-1">
    <%= f.text_field :quantity, :class => 'form-control' %>
    </div>
  </div>

  <div class="field">
    <%= f.label t(:value), :class => 'control-label col-lg-1'%>
    <div class="col-lg-1">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
  </div>

    <div class="field">
    <%= f.label t(:store_entrance), :class => 'control-label col-lg-1'%>
    <div class="col-lg-1">
      <%= f.select :store_entrance, PurchaseProduct.store_entrances.keys.to_a , { :include_blank => 'Selecione a loja'}, :class => "form-control form-control-sm" %>
    </div>
  </div>

  <%= link_to_remove_association "Remover Produto", f, :class => 'control-label col-lg-5' %>
 
  <br><br><br>
</div>