<%= form_for @sale, :html => { :class => "form-horizontal sale" } do |f| %>

  <% if @sale.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sale.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :customer_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= select("sale", "customer_id", Customer.all.collect {|p| [ p.name, p.id ] }, {},{ include_blank: true, class: 'form-control form-control-sm' }) %>
    </div>
    <%=f.error_span(:customer_id) %>
  </div>
  <div class="form-group">
    <%= f.label :discount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :discount, :class => 'form-control' %>
    </div>
    <%=f.error_span(:discount) %>
  </div>
  <div class="form-group">
    <%= f.label :online, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.check_box :online %>
    </div>
    <%=f.error_span(:online) %>
  </div>
  <div class="form-group">
    <%= f.label :disclosure, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.check_box :online %>
    </div>
    <%=f.error_span(:disclosure) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-4">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sales_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
