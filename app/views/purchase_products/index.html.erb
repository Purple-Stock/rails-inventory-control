<%- model_class = PurchaseProduct -%>
<div class="page-header">
  <h1><%=t '.title', :default => t(model_class.model_name.human.pluralize.titleize) %></h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_purchase_product_path,
            :class => 'btn btn-primary' %>
<table id="stockTable" class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(t(:custom_id)) %></th>
      <th><%= model_class.human_attribute_name(:foto) %></th>
      <th><%= model_class.human_attribute_name(t(:quantity)) %></th>
      <th><%= model_class.human_attribute_name(t(:value)) %></th>
      <th><%= model_class.human_attribute_name(t(:product_id)) %></th>
      <th><%= model_class.human_attribute_name(t(:created_at)) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @purchase_products.each do |purchase_product| %>
      <tr>
        <td><%= purchase_product.product.custom_id %></td>
        <td><%= image_tag(purchase_product.product.image.attached? ? purchase_product.product.image : purchase_product.product.image_url || "https://purple-stock.s3-sa-east-1.amazonaws.com/images.png", size: "150") %></td>
        <td><%= purchase_product.quantity %></td>
        <td><%= purchase_product.value %></td>
        <td><%= purchase_product.product.name %></td>
        <td><%=l purchase_product.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_purchase_product_path(purchase_product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      purchase_product_path(purchase_product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
